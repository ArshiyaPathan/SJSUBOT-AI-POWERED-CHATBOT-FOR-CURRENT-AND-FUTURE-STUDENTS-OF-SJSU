<br><h2 class="page-header" style ="font: 400 30px Lato, sans-serif;">Admin Login</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<br>
<br>
<form method="post" action="/users/adminlogin" style ="height:300px; font: 400 20px Lato, sans-serif;">
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" name="username" placeholder="Username">
  </div>
  <br>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default" style ="width: 100px; margin-top: 20px">Submit</button>
</form>
